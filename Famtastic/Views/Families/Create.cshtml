@model DataAccess.Entity.Family

@{
	ViewData["Title"] = "Create";
}

<h4>Family</h4>
<hr />
<p class="nav-link">
	If you received an email invitation from a member of your family then you don't
	want to create a new one, but join the one already created. Simply enter your invitation code in the
	box below and press "Join"!
</p>
<div class="row">
	<div class="col-sm-4">
		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Join</h5>
				<form asp-action="JoinFamily" method="post">
					<label class="control-label">Invitation Code</label>
					<input asp-for="InvitationCode" class="form-control" />

					<label class="control-label">Family ID</label>
					<input asp-for="Id" class="form-control" />
					<br />
					<div class="form-group">
						<input type="submit" value="Join" class="btn btn-primary col-md-12" />
					</div>
				</form>
			</div>
		</div>
	</div><br/><br/>
	<div class="col-sm-8"><br />
		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Create</h5>
				<form asp-action="Create" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="FamilyLastName" class="control-label">Surname</label>
						<input asp-for="FamilyLastName" class="form-control" />
						<span asp-validation-for="FamilyLastName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Title" class="control-label">Family Title</label>
						<input asp-for="Title" class="form-control" />
						<span asp-validation-for="Title" class="text-danger"></span>
					</div>
					<input type="hidden" asp-for="Picture" />
					<div class="form-group">
						<label asp-for="Picture">Upload picture</label><br />
						<input asp-for="Picture" type="file" name="file" class="btn btn-primary" />
						<span asp-validation-for="Picture" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Description" class="control-label"></label>
						<textarea id="summernote" asp-for="Description" class="form-control"></textarea>
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
					<script>
						$('#summernote').summernote({
							placeholder: '',
							tabsize: 2,
							height: 250,
							fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
							toolbar: [
								// [groupName, [list of button]]
								['style', ['bold', 'italic', 'underline', 'clear']],
								['font', ['Arial Black', 'Comic Sans MS', 'Courier New']],
								['fontsize', ['32', '24', '18', '14', '12', '10', '8']],
								['para', ['ul', 'ol', 'paragraph']],
								['insert', ['link']],
								['view', ['fullscreen', 'codeview']]
							]
						});
					</script>
					<div class="form-group">
						<label asp-for="InvitationCode" class="control-label"></label>
						<input asp-for="InvitationCode" class="form-control"/>
						<span asp-validation-for="InvitationCode" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="control-label" disabled="disabled">Invite Email (Use a comma or semi-colon to separate addresses)</label>
						<input type="text" class="form-control" name="emailInvite" disabled="disabled" />
						<p style="color:red">Create the family, continue using 'Edit' Mode. Follow the directions on the label for email addresses.</p>
					</div>
					<div>
						<input type="hidden" asp-for="CreatedOn" />
						<input type="hidden" asp-for="CreatedBy" />
					</div>
					<div class="row">
						<div class="col-md-6">
							<input type="submit" value="Create" class="btn btn-success col-md-12" />
						</div><br /><br />
						<div class="col-md-6">
							<a class="btn btn-warning col-md-12" asp-action="Index" asp-controller="Home">Back</a>
						</div>
					</div>
					<div class="form-group">

					</div>
				</form>
			</div>
		</div>
	</div>
</div>
@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	}
