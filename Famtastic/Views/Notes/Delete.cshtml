@model DataAccess.Entity.Note

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Note</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Text)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
	    @if (Model.ShareToFam)
	    {
		    <dt class="col-sm-2">
			    This is shared to Family
		    </dt>
	    }
	    else
	    {
		    <dt class="col-sm-2">
			    This is not shared to Family
		    </dt>
	    }
	    @if (Model.Advanced)
	    {
		    <dt class="col-sm-2">
			    Has a task list
		    </dt>
	    }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
    </dl>
    <br/>
    <div class="row">
	    <div class="col-md-6">
		    <form asp-action="Delete">
			    <input type="hidden" asp-for="Id" />
			    <input type="submit" value="Delete" class="btn btn-danger col-md-12" /> |
		    </form>
	    </div>
	    <div class="col-md-6">
		    <a class="btn btn-warning col-md-12" asp-action="Index">Back</a>
	    </div>
    </div>
</div>
