@using Biz
@using DataAccess.Dto
@model DataAccess.Entity.UserProfile

@{
	ViewData["Title"] = "Details";
}

<h5 class="card-title">User Profile</h5>

<div>
	<div class="card">
		<div class="card-body">
			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Email)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Email)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Profile)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Profile)
				</dd>
				<dt class="col-sm-2">
					First Name
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.FirstName)
				</dd>
				<dt class="col-sm-2">
					Last Name
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.LastName)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Picture)
				</dt>
				<dd class="col-sm-10">
					<img class="img-fluid w-25 p-3" src="@Url.Action("RenderPhoto", "MediaHelper", new { imageType = Constants.RenderProfileImage , id = UserData.UserProfileId })" alt="alt Image" /><br />
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Blurb)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Blurb)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.CreatedOn)
				</dt>
			</dl>
		</div>
	</div>
</div>
<br />
<br />
<div class="row">
	<div class="col-md-6">
		<a class="btn btn-success col-md-12" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
	</div><br /><br />
	<div class="col-md-6">
		<a class="btn btn-warning col-md-12" asp-action="Index" asp-controller="Home">Back</a>
	</div>
</div>
