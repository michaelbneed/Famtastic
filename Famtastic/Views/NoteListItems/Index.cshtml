@model IEnumerable<DataAccess.Entity.NoteListItem>

@{
    ViewData["Title"] = "Index";
}

    <h1>@ViewData["NoteTitle"]</h1>
    <div class="card">
        <div class="card-body">
            <p class="text-sm-left">@Html.Raw(@ViewData["NoteText"])</p>
        </div>
    </div>
<p>
    <a asp-action="Create">New List Item</a>
</p>
<table class="table table-striped small" style="width:100%">
    <thead>
        <tr>
            <th>
                Item
            </th>
            <th>
                Date
            </th>
            <th>
                Member
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NoteListItem1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<div>
    <a asp-action="Edit" asp-controller="Notes" asp-route-id="@ViewData["NoteId"]">Back to Linked Note</a>
</div>